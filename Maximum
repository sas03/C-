#include <iostream>
using namespace std;
 
int abc; //globales variable
 
int x = 42, y = 11;
float z = float(x/y);
float w = float(x)/y;
 
double maximum(double x, double y){
	return x > y ? x : y;
}
 
int maximum(int x, int y){
	return x > y ? x : y;
}
 
int main(){
	abc = 42; //globales variable
	int abc = 12; //lokales variable
	cout << "abc = " << abc << endl;
	cout << "::abc = " << ::abc << endl;
	cout << "z = " << z << endl;
	cout << "w = " << w << endl;
 
	double a = 100.2;
	double b = 333.777;
	int c = 1700;
	int d = 1000;
	cout << maximum(a,b) << endl; // aufruf double maximum methode
	cout << maximum(c,d) << endl; // aufruf int maximum methode
 
	return 0;
}
 
 
//int max(int i ,int j) //Ã¼bergabe parameter
